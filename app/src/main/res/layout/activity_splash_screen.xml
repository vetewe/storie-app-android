<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.splashscreen.SplashScreenActivity">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="412dp"
        android:layout_height="382dp"
        android:layout_marginTop="136dp"
        android:contentDescription="@string/splashscreen"
        android:src="@drawable/splash_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds" />

    <ImageView
        android:id="@+id/iv_splash_app_name"
        android:layout_width="381dp"
        android:layout_height="114dp"
        android:layout_marginBottom="56dp"
        android:contentDescription="@string/ss_app_name"
        android:src="@drawable/storie_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_splash_logo"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/iv_splash_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_splash_logo"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ImageContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>